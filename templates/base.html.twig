<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>{% block title %} Le Patch à la Maison {% endblock%}</title>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/ad5bd95191.js" crossorigin="anonymous"></script> 
    <!-- Bootstrap core CSS -->
    <link href="{{asset('assets/css/bootstrap.min.css')}}" rel="stylesheet">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('assets/imgs/favicon.ico') }}" />

    {% block script_head %}
    {% endblock %}

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <!-- Custom styles for this template -->
    <link href="{{asset('assets/css/carousel.css')}}" rel="stylesheet">
    <link href="{{asset('assets/css/lepatchalamaison.css')}}" rel="stylesheet">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top navbar-custom">
        <a class="navbar-brand" href="{{ path('home') }}">Le Patch à la Maison</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('products') }}"> Boutique <span class="sr-only">Boutique</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('about_us') }}"> Qui sommes-nous ?<span class="sr-only">Qui sommes-nous ?</span></a>
                </li>                
            </ul>
            <ul class="navbar-nav ml-auto">
                {% if app.user %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('account') }}">Mon compte <span class="nav-user-name fw-light font-size-custom"> ( {{app.user.firstname}} {{app.user.lastname}} ) </span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('register') }}">Inscription</a>
                        </li>
                {% endif %}
                <li class="nav-item"><a class="nav-link" href="{{ path('cart') }}"><i class="fas fa-shopping-cart"></i></a></li>
            </ul>
        </div>
    </nav>
</header>

<main role="main">

    {% if block('jumbotron') is defined %}

    <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
          <h1 class="display-3">Le Patch s'invite à la Maison !</h1>
          <p>Découvrez nos produits artisanaux en patchwork indispensables au quotidien</p>
          <p><a class="btn btn-primary btn-lg" href="{{ path('products') }}" role="button">C'est partit !</a></p>
        </div>
      </div>
    {% endif %}


    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing {% if block('jumbotron') is not defined %}mt-5{% endif %}">

        {% block content %}
        {% endblock %}

    </div><!-- /.container -->

    <!-- FOOTER -->
    <footer class="footer-custom">
        <p>&copy; 2021 Le Patch à la Maison </p> <p><a href="#">Mentions légales</a> &middot; <a href="{{ path('contact') }}">Contact</a></p>
    </footer>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="{{asset('assets/js/bootstrap.bundle.js')}}"></script>
{% block script_body_end %}
{% endblock %}
</body>
</html>