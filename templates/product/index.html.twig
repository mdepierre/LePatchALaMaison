{% extends 'base.html.twig' %}

{% block title %} Boutique - Le Patch à la Maison {% endblock %}

{% block content %}

<h1> Boutique </h1>

<div class="row product-container">

    {% for product in products %}
        <div class="col-md-4">
            <div class="product-item text-center">
                <a href="{{ path('product', {'slug':product.slug}) }}" ><img src="/uploads/{{ product.illustration }}" alt"{{ product.name }}" class="img-fluid"></a>
                <h2> {{ product.name }} </h2>
                <p class="product-subtitle"> {{ product.subtitle }} </p>
                <p class="product-price"> {{ (product.price /100)|number_format(2, ',') }} € </p>
            </div>
        </div>
    {% endfor %}

</div>

{% endblock %}
