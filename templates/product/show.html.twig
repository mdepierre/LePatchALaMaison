{% extends 'base.html.twig' %}

{% block title %} {{ product.name }} - Le Patch à la Maison {% endblock %}

{% block content %}

<div class="row product-container">
  <div class="col-md-5">
      <img src="/uploads/{{ product.illustration }}" alt"{{ product.name }}" class="img-fluid">
  </div>
  <div class="col-md-7 my-auto">
    <div>
      <h1>{{ product.name }}</h1>
      <p>{{ product.subtitle }}</p>
      <p class="product-page-price">{{ (product.price /100)|number_format(2, ',') }} € </p>
    </div>
    <p>{{ product.description }}</p>
    <a href="{{ path('add_to_cart', { 'id': product.id }) }}" class="btn btn-primary">Ajouter au panier </a>
  </div>
</div>

{% endblock %}